<p style="color: green"><%= notice %></p>

<%= render @coach %>

<div>
  <h1>Choose the time of your appointment</h1>
  <% days_of_the_week = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"] %>
  
  <% days_of_the_week.each do |day| %>
    <h1><%= day %></h1>
    <% day_times(day, @coach.appointments).each do |time| %>
      <%= form_with model: @appointment, url: user_appointments_path(@user), method: :post do |form| %>
        <%= form.hidden_field :user_id, value: User.first.id %>
        <%= form.hidden_field :coach_id, value: @coach.id %> 
        <%= form.hidden_field :time, value: time %>
        <%= form.submit time %>
      <% end %>
    <% end %>

 
  <% end %>

     <% @coach.appointments.each do |appointment| %>
      <%= form_with model: [@coach, @appointment] do |form| %>
        <%= form.text_field :user_id, value: User.first.id %>
        <%= form.text_field :coach_id %> 
        <%= form.text_field :time %>
        <%= form.submit %>
      <% end %>
    <% end %>

  <br><br>
  <%= link_to "Edit this coach", edit_coach_path(@coach) %> |
  <%= link_to "Back to coaches", coaches_path %>

  <%= button_to "Destroy this coach", @coach, method: :delete %>
</div>
