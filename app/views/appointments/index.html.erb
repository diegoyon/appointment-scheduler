<h1>Appointments</h1>

<div id="appointments">
  <% @appointments.each do |appointment| %>
    <%= render appointment %>
    <p>
      <%= link_to "Show this appointment", user_appointment_path(@user, appointment) %>
    </p>
  <% end %>
</div>

